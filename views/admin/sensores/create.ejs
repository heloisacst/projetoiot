<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Posts</title>
  <%- include('../../import'); -%>
</head>

<body>
  <%- include('../../navs'); -%>
  <h1>Novo Sensor</h1>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <form action="create" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <label for="sensorTitle">Local do Sensor</label>
            <input name="nome" type="text" class="form-control" id="sensorTitle" aria-describedby="emailHelp"
              placeholder="Ex: Sensor Churrasqueira">
            <small id="emailHelp" class="form-text text-muted"></small>
          </div>
          <h3>Medições</h3>
          <div class="form-group">
            <div class="form-group">
              <label for="sensorDescription">Data</label>
              <input name="data" type="text" class="form-control" id="sensorDescription" placeholder="DD/MM/YYYY">
            </div>
          </div>
          <div class="form-group">
            <div class="form-group">
              <label for="sensorDescription">Valor</label>
              <input name="valor" type="text" class="form-control" id="sensorDescription" placeholder="Em Celcius">
            </div>
          </div>
          <div class="form-group">
            <label for="sensorBody">Tipo</label>
            <input name="tipo" type="text" class="form-control" id="sensorBody" placeholder="Temperatura ou Umidade">
          </div>
          <button type="submit" class="btn btn-primary">Salvar</button>
        </form>
      </div>
    </div>
  </div>
</body>

</html>